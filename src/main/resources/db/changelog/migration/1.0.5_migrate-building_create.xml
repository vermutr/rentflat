<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="5" author="FilipTryhuk-pkmail">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="building"/>
            </not>
        </preConditions>

        <createTable tableName="building">
            <column name="building_id" type="integer" autoIncrement="true">
                <constraints primaryKey="true" foreignKeyName="FK_offers_building" references="offers(building_details)" unique="true" nullable="false"/>
            </column>
            <column name="building_type" type="VARCHAR(30)"/>
            <column name="floor_count" type="integer"/>
            <column name="construction_date" type="Date"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
