<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="4" author="FilipTryhuk-pkmail">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="direct_message"/>
            </not>
        </preConditions>

        <createTable tableName="direct_message">
            <column name="id" type="integer">
                <constraints primaryKey="true"/>
            </column>
            <column name="owner_id" type="integer">
                <constraints foreignKeyName="FK_customersDetails_directMessage" references="customers_details(id)"/>
            </column>
            <column name="email" type="VARCHAR(60)"/>
            <column name="phone_number" type="VARCHAR(15)"/>
            <column name="message" type="VARCHAR(2000)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
